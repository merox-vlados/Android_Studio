<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <TextView
        android:id="@+id/textViewRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:text="@string/registration_label"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="50dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextRegistrationEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="@string/registration_email"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/textViewRegister" />

    <EditText
        android:id="@+id/editTextRegistrationPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="@string/registration_password"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegistrationEmail" />


    <EditText
        android:id="@+id/editTextRegistrationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="@string/registration_name"
        android:inputType="textCapWords"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegistrationPassword" />

    <EditText
        android:id="@+id/editTextRegistrationLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="@string/registration_last_name"
        android:inputType="textCapWords"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegistrationName" />


    <EditText
        android:id="@+id/editTextRegistrationAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="@string/registration_age"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegistrationLastName" />

    <Button
        android:id="@+id/buttonRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/registration_sign_up"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegistrationAge"

        />

</androidx.constraintlayout.widget.ConstraintLayout>